# Required: Google Gemini API Key for LLM-based evaluation
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Required: LlamaParse API Key for document parsing
# Get your API key from: https://cloud.llamaindex.ai/
LLAMA_CLOUD_API_KEY=your_llamaparse_api_key_here

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your_secret_key_change_in_production

# Database Configuration
DATABASE_URL=sqlite:///evaluations.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=evaluator.log

# API Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes